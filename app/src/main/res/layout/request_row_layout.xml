<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:id="@+id/requestVotesTextView"
        android:textColor="@color/Black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:id="@+id/requestSongNameTextView"
        android:textColor="@color/Black"
        android:layout_toRightOf="@id/requestVotesTextView"
        android:paddingLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:id="@+id/requestArtistNameTextView"
        android:textColor="@color/Black"
        android:layout_toRightOf="@id/requestVotesTextView"
        android:layout_below="@id/requestSongNameTextView"
        android:paddingLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/requestDot"
        android:textColor="@color/Black"
        android:text=" \u2022 "
        android:layout_toRightOf="@id/requestArtistNameTextView"
        android:layout_below="@id/requestSongNameTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/requestAlbumNameTextView"
        android:textSize="12dp"
        android:textColor="@color/Black"
        android:layout_toRightOf="@id/requestDot"
        android:layout_below="@id/requestSongNameTextView"
        android:maxLines="1"
        android:ellipsize="end"/>

</RelativeLayout>